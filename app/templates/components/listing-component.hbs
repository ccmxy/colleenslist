<li class="list-group-item" {{action 'detailsShow'}}>
  {{listing.title}}
  {{#if areDetailsShowing }}
  {{listing.details}}
  <p><img src={{listing.image}} {{action 'detailsHide'}}></p>
  {{else}}
       <button {{action 'detailsShow'}}>Show image</button>
  {{/if}}


  <button {{action 'delete' listing}}>Delete</button>
</li>
